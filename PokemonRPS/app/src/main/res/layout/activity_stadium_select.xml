<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#3FBE5B"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rocket Stadium"
            android:textStyle="bold"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="273dp"
            android:layout_height="159dp"
            android:onClick="toGame1"
            android:src="@drawable/pokegym1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Plasma Stadium"
            android:textStyle="bold"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="273dp"
            android:layout_height="159dp"
            android:onClick="toGame2"
            android:src="@drawable/pokegym5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Aqua Stadium"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="273dp"
            android:layout_height="159dp"
            android:onClick="toGame3"
            android:src="@drawable/pokegym4" />

    </LinearLayout>
</LinearLayout>
