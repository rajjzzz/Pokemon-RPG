<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#3FBE5B"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    >

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="225sp"
        android:src="@drawable/pokelogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="50sp"
            android:layout_marginLeft="20sp"
            android:layout_height="50sp"
            android:onClick="toGame1"
            android:src="@drawable/pokeball"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stadiumselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stadium Select"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="50sp"
            android:layout_marginLeft="20sp"
            android:layout_height="50sp"
            android:src="@drawable/pokeball"
            android:onClick="tostadiumselect"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="50sp"
            android:layout_marginLeft="20sp"
            android:layout_height="50sp"
            android:src="@drawable/pokeball"
            android:onClick="toinstructions"/>

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_marginTop="45sp"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:src="@drawable/pokeballmove" />

</LinearLayout>
